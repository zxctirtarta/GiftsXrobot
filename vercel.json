{
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "mini-app/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/set_webhook",
      "dest": "backend/app.py"
    },
    {
      "src": "/webhook",
      "dest": "backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "mini-app/index.html"
    }
  ]
}